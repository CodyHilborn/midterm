<%- include('partials/_header') %>

  <main class="flex-fill">
    <span id="quizzes-all-title">
      <h1>QuizApp Home</h1>
      <p>Pick a quiz below and give it a try!</p>
    </span>

    <div class="quizzes-all-container list-group w-75 mx-auto mt-5 hidden">

      <% for (let i=0; i < quizzes.length; i++) { %>

        <div class="card text-center mt-2 mb-2">
          <div class="card-header">
            <span>
              Created by: <%= quizzes[i].creator %>
            </span>
            <span>
              Quiz with <%= quizzes[i].num_of_questions %> quesitons
            </span>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= quizzes[i].title.toUpperCase() %> Quiz
            </h5>
            <p class="card-text">
              <%= quizzes[i].description %>
            </p>
            <a href="/quizzes/<%= quizzes[i].id %>" class="action-btn btn btn-primary">Attempt This Quiz!</a>
          </div>
          <div class="card-footer text-muted">
            <span>
              <p hidden class="hidden-link-quizzes">localhost:8080/quizzes/<%= quizzes[i].id %>
              </p>
              <button class="copy-link-quizzes-btn btn btn-primary">Copy Link</button>
              <span class="copy-message-quizzes">Copied!</span>
            </span>
          </div>
        </div>

        <% } %>

    </div>

  </main>


  <%- include('partials/_footer') %>